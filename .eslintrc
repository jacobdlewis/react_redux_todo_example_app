// Use this file as a starting point for your project's .eslintrc.
// Copy this file, and add rule overrides as needed.
{
  "extends": "airbnb",
  "globals": {
    ReaderCore: true,
    __DEV__: true
  },
  "env": {
    "es6": true,
    "serviceworker": true,
    "browser": true,
    "commonjs": true,
    "node": true,
    "mocha": true
  },
  "rules": {
    "new-cap": 0,
    "no-unused-vars": 1,
    "react/prefer-stateless-function": 1,
    "react/prefer-es6-class": 1,
    "react/prop-types": 1,
  }
}
